<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 城市生活全局样式 -->
    <style name="CLTheme.Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/CLActionBar</item>
        <item name="actionBarDivider">@drawable/actionbar_divider</item>
        <item name="actionDropDownStyle">@style/CLActionBarSpinner</item>
        <item name="homeAsUpIndicator">@drawable/actionbar_up_indicator</item>
        <item name="actionBarItemBackground">@drawable/actionbar_menu_selector</item>
        <item name="actionMenuTextColor">@color/actionbar_menu_text_color</item>
        <item name="android:windowAnimationStyle">@style/CLAnimation.Activity</item>
        <item name="android:buttonStyle">@style/CLButton</item>
        <item name="android:checkboxStyle">@style/CLCheckbox</item>
        <item name="android:listViewStyle">@style/CLListView</item>
        <item name="android:progressBarStyleHorizontal">@style/CLrogressBarStyleHorizontal</item>
        <item name="android:radioButtonStyle">@style/CLRadioButton</item>
    </style>

    <!-- 城市生活ActionBar样式 -->
    <style name="CLActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:icon">@drawable/actionbar_icon_layer_big_padding</item>
        <item name="icon">@drawable/actionbar_icon_layer_big_padding</item>
        <item name="background">@drawable/actionbar_bg</item>
        <item name="backgroundStacked">@drawable/actionbar_bg</item>
        <item name="backgroundSplit">@drawable/actionbar_bg</item>
        <item name="titleTextStyle">@style/CLActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/CLActionBar.SubTitleTextStyle</item>
        <item name="indeterminateProgressStyle">@style/ActionBarCustomProgressBar</item>
    </style>

    <!-- 城市生活ActionBar Spinner 样式 -->
    <style name="CLActionBarSpinner" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="spinnerMode">dropdown</item>
        <item name="android:popupBackground">@drawable/abc_menu_dropdown_panel_holo_light</item>
        <item name="android:dropDownSelector">@drawable/actionbar_bg_selecter</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">100dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/abc_spinner_ab_holo_dark</item>
    </style>

    <!-- 城市生活ActionBar标题样式 -->
    <style name="CLActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/actionbar_title_size</item>
        <item name="android:textColor">@color/actionbar_tittle_color</item>
    </style>

    <!-- 城市生活ActionBar子标题样式 -->
    <style name="CLActionBar.SubTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/HintTextSize</item>
        <item name="android:textColor">@color/hint_text_color</item>
    </style>

    <!-- 城市生活ActionBar进度条样式 -->
    <style name="ActionBarCustomProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/actionbar_progress_holo</item>
    </style>

    <!-- 城市生活ActionBar菜单文本样式 -->
    <style name="CLActionBarMenuText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/actionbar_menu_text_size</item>
    </style>

    <!-- 城市生活Activity动画切换效果 -->
    <style name="CLAnimation.Activity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- 城市生活按钮样式 -->
    <style name="CLButton" parent="@android:style/Widget.Button"></style>

    <!-- 城市生活复选框样式 -->
    <style name="CLCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox"></style>

    <!-- 城市生活列表样式 -->
    <style name="CLListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@drawable/base_list_divider_drawable</item>
        <item name="android:listSelector">@drawable/base_list_selector</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:smoothScrollbar">true</item>
    </style>
    
    <!-- 城市生活水平进度条样式 -->
    <style name="CLrogressBarStyleHorizontal" parent="@android:style/Widget.ProgressBar.Horizontal"></style>

    <!-- 城市生活单选按钮样式 -->
    <style name="CLRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton"></style>
	
    <!-- 资讯列表标题字体样式  -->
    <style name="news_list_title_style">
        <item name="android:textSize">@dimen/news_list_title_text_size</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/news_list_title_color</item>
    </style>
	
    <!-- 资讯列表描述字体样式  -->
    <style name="news_list_desc_style">
        <item name="android:textSize">@dimen/news_list_desc_text_size</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/news_list_desc_color</item>
    </style>
	
    <!-- 资讯列表标签字体样式  -->
    <style name="news_list_tag_style">
        <item name="android:textSize">@dimen/news_list_tag_text_size</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/news_list_tag_color</item>
    </style>
    
    <!-- 资讯标题样式  -->
    <style name="news_title_style">
        <item name="android:textSize">@dimen/news_title_text_size</item>
        <item name="android:typeface">sans</item>
         <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/news_list_title_color</item>
    </style>
	
    <!-- 资讯内容样式  -->
    <style name="news_content_style">
        <item name="android:textSize">@dimen/news_content_text_size</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/news_content_color</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <!-- 底部弹出样式对话框  -->
    <style name="popupStyle" parent="@android:style/Theme.Dialog">
	    <item name="android:windowFrame">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AnimationBottom</item>
    </style>
    
    <style name="AnimationBottom">	    	    
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
    
    <!-- 对话框字体样式  -->
    <style name="box_option_text_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/box_item_title_textsize</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- 投票选项字体大小  -->
    <style name="vote_option_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/news_list_desc_color</item>
    </style>
    
    <!-- 滑动广告标题样式  -->
    <style name="sidebar_title_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/sidebar_title_color</item>
        <item name="android:layout_marginLeft">3.0dip</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- 价格样式  -->
    <style name="price_text_style">
    	<item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/price_text_color</item>
    </style>
</resources>