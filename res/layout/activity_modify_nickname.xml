<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="17.78dp"
    android:paddingRight="17.78dp" >

    <EditText
        android:id="@+id/nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.78dp"
        android:background="@drawable/edit_selector"
        android:drawableLeft="@drawable/et_ic_account_selector"
        android:drawablePadding="2dp"
        android:hint="@string/hint_username"
        android:inputType="text"
        android:textColorHint="#ffd5d5d5"
        android:textSize="13.33sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22.67dp"
        android:background="@drawable/btn_confirm_selector"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/common_confirm_text_color" />

</LinearLayout>