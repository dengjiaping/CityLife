<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_dialog_title_bg"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="@string/pf_push_settings"
        android:textColor="#fff"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="-1dp"
        android:background="@drawable/setting_dialog_content_bg"
        android:orientation="vertical"
        android:paddingTop="1dp" >

        <CheckBox
            android:id="@+id/push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/push_check_box_selector"
            android:text="推送"
            android:textColor="@color/common_cancle_text_color"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>