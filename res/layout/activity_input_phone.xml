<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical"
    android:paddingLeft="17.78dp"
    android:paddingRight="17.78dp" >

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.33dp"
        android:background="@drawable/edit_selector"
        android:drawableLeft="@drawable/et_ic_phone_selector"
        android:drawablePadding="2dp"
        android:hint="@string/hint_userphone"
        android:inputType="phone"
        android:textColorHint="#ffd5d5d5"
        android:textSize="13.33sp" >
    </EditText>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.33dp"
        android:background="@drawable/btn_confirm_selector"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/common_confirm_text_color" />

</LinearLayout>