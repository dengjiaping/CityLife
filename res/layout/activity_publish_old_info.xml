<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_bg_color"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffd5bf"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <com.common.widget.hzlib.HorizontalListView
                    xmlns:hl="http://schemas.android.com/apk/res-auto"
                    android:id="@android:id/list"
                    android:layout_width="wrap_content"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    hl:listSelector="@android:color/transparent" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48.89dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="74.22dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="17.78dp"
                        android:text="标    题"
                        android:textColor="#000"
                        android:textSize="@dimen/old_market_publish_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8.44dp"
                    android:layout_marginTop="8.44dp"
                    android:background="#d6d6d6" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.89dp"
                    android:background="@null"
                    android:hint="至少6字"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#d5d5d5"
                    android:textSize="@dimen/old_market_publish_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d6d6d6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48.89dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="74.22dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="17.78dp"
                        android:text="描    述"
                        android:textColor="#000"
                        android:textSize="@dimen/old_market_publish_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8.44dp"
                    android:layout_marginTop="8.44dp"
                    android:background="#d6d6d6" />

                <EditText
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.89dp"
                    android:background="@null"
                    android:hint="至少10字"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#d5d5d5"
                    android:textSize="@dimen/old_market_publish_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d6d6d6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48.89dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="74.22dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="17.78dp"
                        android:inputType="number"
                        android:text="价    格"
                        android:textColor="#000"
                        android:textSize="@dimen/old_market_publish_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8.44dp"
                    android:layout_marginTop="8.44dp"
                    android:background="#d6d6d6" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.89dp"
                        android:background="@null"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:textColorHint="#d5d5d5"
                        android:textSize="@dimen/old_market_publish_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="元"
                        android:textColor="#d5d5d5"
                        android:textSize="@dimen/old_market_publish_text_size" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d6d6d6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48.89dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="74.22dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="17.78dp"
                        android:text="地    址"
                        android:textColor="#000"
                        android:textSize="@dimen/old_market_publish_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8.44dp"
                    android:layout_marginTop="8.44dp"
                    android:background="#d6d6d6" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.89dp"
                    android:background="@null"
                    android:hint="至少6字"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#d5d5d5"
                    android:textSize="@dimen/old_market_publish_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d6d6d6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48.89dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="74.22dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="17.78dp"
                        android:text="联系人"
                        android:textColor="#000"
                        android:textSize="@dimen/old_market_publish_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8.44dp"
                    android:layout_marginTop="8.44dp"
                    android:background="#d6d6d6" />

                <EditText
                    android:id="@+id/contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.89dp"
                    android:background="@null"
                    android:hint="至少2字"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#d5d5d5"
                    android:textSize="@dimen/old_market_publish_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d6d6d6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48.89dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="74.22dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="17.78dp"
                        android:text="手机号"
                        android:textColor="#000"
                        android:textSize="@dimen/old_market_publish_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8.44dp"
                    android:layout_marginTop="8.44dp"
                    android:background="#d6d6d6" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.89dp"
                    android:background="@null"
                    android:hint=""
                    android:inputType="phone"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColorHint="#d5d5d5"
                    android:textSize="@dimen/old_market_publish_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d6d6d6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48.89dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="74.22dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="17.78dp"
                        android:text="身    份"
                        android:textColor="#000"
                        android:textSize="@dimen/old_market_publish_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8.44dp"
                    android:layout_marginTop="8.44dp"
                    android:background="#d6d6d6" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.89dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_box_selector"
                        android:checked="true"
                        android:text="个人" />

                    <RadioButton
                        android:id="@+id/merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:button="@drawable/check_box_selector"
                        android:text="商家" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d6d6d6" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.89dp"
                android:layout_marginLeft="17.78dp"
                android:layout_marginRight="17.78dp"
                android:layout_marginTop="16.89dp"
                android:background="@drawable/btn_confirm_selector"
                android:gravity="center"
                android:text="发布"
                android:textColor="@color/common_confirm_text_color" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>