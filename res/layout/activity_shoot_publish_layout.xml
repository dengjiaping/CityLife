<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffd5bf"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <com.common.widget.hzlib.HorizontalListView
                xmlns:hl="http://schemas.android.com/apk/res-auto"
                android:id="@android:id/list"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                hl:listSelector="@android:color/transparent" />
        </RelativeLayout>

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.78dp"
            android:layout_marginRight="17.78dp"
            android:layout_marginTop="17.78dp"
            android:background="@drawable/shoot_et_bg"
            android:hint="@string/hint_shoot_title"
            android:paddingLeft="10dp"
            android:textColorHint="#ffd5d5d5"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.78dp"
            android:layout_marginRight="17.78dp"
            android:layout_marginTop="9.33dp"
            android:background="@drawable/shoot_et_content"
            android:gravity="top"
            android:hint="@string/hint_shoot_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#ffd5d5d5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.89dp"
            android:layout_marginTop="16.89dp"
            android:layout_marginLeft="17.78dp"
            android:layout_marginRight="17.78dp"
            android:background="@drawable/btn_confirm_selector"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/common_confirm_text_color" />
    </LinearLayout>

</ScrollView>